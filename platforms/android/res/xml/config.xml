<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.edumedia.elab0009.GiftR" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <name>GiftR</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <icon density="ldpi" src="res/android/icon/launch@LDPI.png" />
    <icon density="mdpi" src="res/android/icon/launch@MDPI.png" />
    <icon density="hdpi" src="res/android/icon/launch@HDPI.png" />
    <icon density="xhdpi" src="res/android/icon/launch@XHDPI.png" />
    <icon density="xxhdpi" src="res/android/icon/launch@XXHDPI.png" />
    <icon density="xxxhdpi" src="res/android/icon/launch@XXXHDPI.png" />
    <splash density="port-mdpi" src="res/android/splash/P_MDPI.png" />
    <splash density="port-hdpi" src="res/android/splash/P_HDPI.png" />
    <splash density="port-xhdpi" src="res/android/splash/P_XHDPI.png" />
    <splash density="port-xxhdpi" src="res/android/splash/P_XXHDPI.png" />
    <splash density="port-xxxhdpi" src="res/android/splash/P_XXXHDPI.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="AutoHideSplacshScreen" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashOnlyShowFirstTime" value="false" />
</widget>
