<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.edumedia.elab0009.GiftR" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GiftR</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="res/android/icon/launch@LDPI.png" density="ldpi" />
         <icon src="res/android/icon/launch@MDPI.png" density="mdpi" />
          <icon src="res/android/icon/launch@HDPI.png" density="hdpi" />
           <icon src="res/android/icon/launch@XHDPI.png" density="xhdpi" />
           <icon src="res/android/icon/launch@XXHDPI.png" density="xxhdpi" />
           <icon src="res/android/icon/launch@XXXHDPI.png" density="xxxhdpi" />
           
           <splash src="res/android/splash/P_MDPI.png" density="port-mdpi" />
           <splash src="res/android/splash/P_HDPI.png" density="port-hdpi" />
           <splash src="res/android/splash/P_XHDPI.png" density="port-xhdpi" />
           <splash src="res/android/splash/P_XXHDPI.png" density="port-xxhdpi" />
           <splash src="res/android/splash/P_XXXHDPI.png" density="port-xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    < preference name="AutoHideSplacshScreen" value="true"/>
    < preference name="SplashScreenDelay" value="3000"/>
    < preference name="SplashMaintainAspectRatio" value="true"/>
    < preference name="SplashOnlyShowFirstTime" value="false"/>
    
</widget>
